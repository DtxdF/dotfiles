#
# Groups' configuration
#
sticky yes
#
# Bindings (Focus)
#
bind-key M-1		group-only-1
bind-key M-2		group-only-2
bind-key M-3		group-only-3
bind-key M-4		group-only-4
bind-key M-5		group-only-5
bind-key M-6		group-only-6
bind-key M-7		group-only-7
bind-key M-8		group-only-8
bind-key M-9		group-only-9
#
# Bindings (Move)
#
bind-key CMS-1		window-movetogroup-1
bind-key CMS-2		window-movetogroup-2
bind-key CMS-3		window-movetogroup-3
bind-key CMS-4		window-movetogroup-4
bind-key CMS-5		window-movetogroup-5
bind-key CMS-6		window-movetogroup-6
bind-key CMS-7		window-movetogroup-7
bind-key CMS-8		window-movetogroup-8
bind-key CMS-9		window-movetogroup-9
#
# Autogrouping
autogroup 1		"Chromium-browser"
autogroup 2		"TelegramDesktop"
autogroup 2		"Signal"

# I don't like borders in the windows
borderwidth 0

# Font
fontname		"Hack Nerd Font Mono:style=Regular"

#
# Bindings
# 
# rofi
bind-key CM-r		"/home/dtxdf/.config/rofi/launchers/misc/launcher.sh"
# brightness
bind-key CM-o		"xrandr-brightness.sh -"
bind-key CM-p		"xrandr-brightness.sh +"
# reset lemonbar
bind-key CS-l		"reset-lemonbar.sh"
# kill lemonbar
bind-key CS-r		"pkill lemonbar"
# Change windows
bind-key CMS-w		"rofi -show window"
# Screenshot
bind-key Print		"scrot-screenshot.sh"
# Lock
bind-key S-l		"xtrlock -b -f"
# Translate
bind-key CMS-t		"translate-clip.sh"

#
# snap
#
# Left && Right
bind-key C4-Left		window-snap-left
bind-key C4-Right	window-snap-right
# Up && Down
bind-key C4-Up		window-snap-up
bind-key C4-Down		window-snap-down

#
# Maximize
#
# Vertical
bind-key CM-Left	window-hmaximize
bind-key CM-Right	window-hmaximize
# Horizontal
bind-key CM-Up		window-vmaximize
bind-key CM-Down	window-vmaximize

# Lemonbar
ignore BarLeft
ignore BarCenter
ignore BarRight

# Padding
gap 50 15 10 10 
